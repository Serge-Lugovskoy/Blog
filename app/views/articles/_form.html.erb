<style type="text/css">
   body {background:#EEE8AA;}
</style>

<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <div style="width: 30px; background: #C0C0C0; border-radius: 5px;"><%= f.label :title %><br></div>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <div style="width: 30px; background: #C0C0C0; border-radius: 5px;"><%= f.label :text %><br></div>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>